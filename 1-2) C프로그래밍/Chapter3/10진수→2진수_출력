#include<stdio.h>

int main()
{
	PrintBinary(4);
	printf("\n");
	PrintBinary(9);
	printf("\n");
}

void PrintBinary(int num)
{
	unsigned cnum = 1 << 7;
	int check = 0;
	while (cnum)
	{
		if (cnum & num)
		{
			printf("1");
		}
		else
		{
			printf("0");
		}
		cnum = cnum >> 1;
	}
}

